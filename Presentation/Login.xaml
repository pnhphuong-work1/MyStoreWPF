<Window x:Class="Presentation.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="420">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="25,130,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="25,190,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="TxtUsername" HorizontalAlignment="Left" Margin="130,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" FontSize="18"/>
        <TextBox x:Name="TxtPassword" HorizontalAlignment="Left" Margin="130,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" FontSize="18"/>
        <Button x:Name="BtnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,291,0,0" VerticalAlignment="Top" Height="40" Width="110" Click="BtnLogin_Click"/>

    </Grid>
</Window>
